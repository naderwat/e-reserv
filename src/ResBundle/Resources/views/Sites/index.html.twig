    {% extends '::base.html.twig' %}
    {% block title%} Sites-{{parent()}} {% endblock%}


    {% block body %}

    <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <h2><i class="fa fa-flag-o"></i> Gestion des sites</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{path('admin_sites') }}">Sites</a>
                        </li>
                        <li class="active">
                            <strong>liste</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        <a href="{{path('admin_sites_add')}}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ajouter</a>
                    </div>
                </div>
            </div>

            <div class="wrapper wrapper-content">
                <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th><i class="fa fa-info-circle"></i> Nom site</th>
                        <th><i class="fa fa-user"></i> Ajoué par </th>
                        <th><i class="fa fa-calendar"></i> Ajouté le </th>
                        <th><i class="fa fa-cogs"></i> Actions </th>
                    </tr>
                    </thead>
                    <tbody>
                   {% for site in sites %}

                        <tr>
                          <td>{{site.id}}</td>
                          <td>{{site.title}}</td>
                          <td>{{site.useradded.username}}</td>
                          <td>{{site.dateadded | date('Y-m-d H:i:s')}}</td>
                          
                          <td>

                            <center>
                                    <a href="{{ path('admin_sites_rooms', {'id': site.id}) }}"  class="btn-sm btn-success"><i class="fa fa-info-circle"></i></a>
   <a href="javascript:void(0)" onclick="delete_site('{{ path('admin_sites_delete', {'id': site.id}) }}')"  class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>

                                    <a class="btn-sm btn-success" href="{{ path('admin_sites_edit', {'id': site.id}) }}" ><i class="fa fa-edit"></i></a>
                                </center>

                          </td>

                            
                        </tr>

                   {% endfor %}
               </tbody>
           </table>
                </div>
            </div>

    {% endblock  %}